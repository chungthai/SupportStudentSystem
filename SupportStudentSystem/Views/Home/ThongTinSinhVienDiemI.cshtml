@using SupportStudentSystem.Models;
@{
    ViewBag.Title = "DonXetTotNghiep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-content">
        <div class="container content apply-content">
            <div class="panel panel-white col-lg-10 col-lg-offset-1">
                <div class="tabbable">
                    <ul id="header-tab" class=" nav nav-tabs nav-tabs-bottom">
                        <li class="active">
                            <a id="don" name="heading" href="#bottom-tab1" data-toggle="tab" aria-expanded="true" style="color: rgb(3, 155, 229);width:100%; height:10%;padding-left:20%">ĐƠN XÉT TỐT NGHIỆP</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="panel panel-white">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center text-blue-800" style="line-height:50px" id="tieuDe">ĐƠN XIN ĐỀ NGHỊ XÉT TỐT NGHIỆP</h3>
                            </div>
                            <ul id="stepy-07866542023465017-header" class="stepy-header">
                                <li id="stepy-07866542023465017-head-0" class="stepy-active" style="cursor: default;">
                                    <div>1</div>
                                    <span>Thông tin cá nhân</span>
                                </li>
                                <li id="stepy-07866542023465017-head-1" style="cursor: default;">
                                    <div>2</div>
                                    <span>Thông tin xét tốt nghiệp</span>
                                </li>
                                <li id="stepy-07866542023465017-head-2" style="cursor: default;">
                                    <div>3</div>
                                    <span>Xác nhận thông tin</span>
                                </li>
                            </ul>
                            <form class="stepy-validation" method="post" action="#" id="stepy-07866542023465017">
                                <fieldset title="1" id="stepy-07866542023465017-step-0" class="stepy-step">
                                    <hr>
                                    <div class="col-md-12">
                                        <p><b class="text-danger"><u>Lưu ý</u></b>: Sinh viên kiểm tra lại thông tin cá nhân. Nếu sai, sinh viên vào mục <a href="#">"Thông tin cá nhân"</a> để cập nhật.</p>
                                        <hr>
                                    </div>
                                    <hr><br>
                                    @foreach (var item in Model)
                                    {
                                        <legend style="display: none;">Thông tin cá nhân</legend>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mã số sinh viên</label>
                                                <input type="text" class="form-control" name="MSSV" value="@item.MSSV" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Họ và tên</label>
                                                <input type="text" class="form-control" name="HoTen" value="@item.HoLot @item.Ten" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Lớp</label>
                                                <input type="text" name="LopID" class="form-control" value="@item.TenLop" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Ngành</label>
                                                @*<input type="hidden" name="NganhCuID" value="">*@
                                                <input type="text" name="NganhCu" value="@item.TenNganh" class="form-control" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Ngày sinh</label>
                                                <input type="text" class="form-control" name="NgaySinh" value="@item.NgaySinh" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <input type="text" name="SoDienThoai" class="form-control" value="@item.SDTSV" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Bậc - Hệ đào tạo</label>
                                                <input type="text" name="BacHeDaoTao" class="form-control" value="@item.TenHDT" readonly="">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input type="text" name="Email" class="form-control" readonly="" value="@item.emailSV">
                                            </div>
                                        </div>
                                        <div class="stepy-navigator">
                                            <a href="/Home/DonXinDiemI" class="button-next btn btn-primary">Tiếp tục <i class="icon-arrow-right14 position-right"></i></a>
                                        </div>
                                    }
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
