@using SupportStudentSystem.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SupportStudentSystem.Models.DANHSACHDON>

@{
    ViewBag.Title = "dsDeNghiXetTotNghiep";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">DANH SÁCH SINH VIÊN ĐỀ NGHỊ XÉT TỐT NGHIỆP</h2>


<table class="table">
    <tr>
        <th class="col-sm-2" style="text-align:center">
            Mã đơn
        </th>

        <th class="col-sm-1" style="text-align:center">
            MSSV
        </th>

        <th class="col-sm-2" style="text-align:center">
            Tên SV
        </th>

        <th class="col-sm-1" style="text-align:center">
            Lớp
        </th>

        <th class="col-sm-2" style="text-align:center">
            Ngày nộp
        </th>

        <th class="col-sm-2" style="text-align:center">
            Tình trạng
        </th>

        <th class="col-sm-2" style="text-align:center">
            Chức năng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-sm-2" style="text-align:center">
                @Html.DisplayFor(modelItem => item.DonTuID)
            </td>

            <td class="col-sm-1" style="text-align:center">
                @Html.DisplayFor(modelItem => item.MSSV)
            </td>

            <td class="col-sm-2" style="text-align:center">
                @Html.DisplayFor(modelItem => item.HoLot) @Html.DisplayFor(modelItem => item.Ten)
            </td>

            <td class="col-sm-1" style="text-align:center">
                @Html.DisplayFor(modelItem => item.TenLop)
            </td>

            <td class="col-sm-2" style="text-align:center">
                @String.Format("{0:dd/MM/yyyy}", item.NgayNopDon)
            </td>
            <td class="col-sm-2" style="text-align:center">
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td class="col-sm-2" style="text-align:center">
                @Html.ActionLink("Sửa", "Edit", new { id = item.DonTuID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.DonTuID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.DonTuID })
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, Page => Url.Action("danhSachDon", new { Page = Page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>