
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <title>Login for Admin</title>
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <div class="container">
        <section id="content">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <form action="">
                    <h1>ADMIN LOGIN</h1>
                    <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
                    <div>
                        <input type="text" name="username" placeholder="Username..." required="" id="form-username" />
                    </div>
                    <div>
                        <input type="password" name="password" placeholder="Password..." required="" id="form-password" />
                    </div>
                    <div>
                        <input type="submit" value="Log in" />
                    </div>
                </form><!-- form -->
            }
        </section><!-- content -->
    </div><!-- container -->
    <script src="~/Scripts/index.js"></script>
</body>
</html>
